<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowScore">

    <ImageView
        android:id="@+id/noimg"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vote_no" />

    <ImageView
        android:id="@+id/one"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noimg"
        app:srcCompat="@drawable/one"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/two"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one"
        app:srcCompat="@drawable/two"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/three"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two"
        app:srcCompat="@drawable/three"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/butt_clear"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="ล้างข้อมูล"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/count_null"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="221dp"
        android:layout_marginLeft="221dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/noimg"
        app:layout_constraintStart_toEndOf="@+id/noimg"
        app:layout_constraintTop_toTopOf="@+id/noimg" />

    <TextView
        android:id="@+id/count_one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="221dp"
        android:layout_marginLeft="221dp"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/one"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toTopOf="@+id/one" />

    <TextView
        android:id="@+id/count_two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="225dp"
        android:layout_marginLeft="225dp"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/two"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toTopOf="@+id/two" />

    <TextView
        android:id="@+id/count_three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="229dp"
        android:layout_marginLeft="229dp"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/three"
        app:layout_constraintStart_toEndOf="@+id/three"
        app:layout_constraintTop_toTopOf="@+id/three" />

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คะแนน"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/count_null"
        app:layout_constraintStart_toStartOf="@+id/count_null"
        app:layout_constraintTop_toBottomOf="@+id/count_null" />

    <TextView
        android:id="@+id/ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คะแนน"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/count_one"
        app:layout_constraintStart_toStartOf="@+id/count_one"
        app:layout_constraintTop_toBottomOf="@+id/count_one" />

    <TextView
        android:id="@+id/sss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คะแนน"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/count_two"
        app:layout_constraintStart_toStartOf="@+id/count_two"
        app:layout_constraintTop_toBottomOf="@+id/count_two" />

    <TextView
        android:id="@+id/ssss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คะแนน"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/count_three"
        app:layout_constraintStart_toStartOf="@+id/count_three"
        app:layout_constraintTop_toBottomOf="@+id/count_three" />

</android.support.constraint.ConstraintLayout>